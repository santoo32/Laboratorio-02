<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ar.edu.utn.frsf.dam.isi.laboratorio02">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">

        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Productos_ofrecidos" />
        <activity android:name=".Alta_pedidos" />
        <activity android:name=".Historial_pedidos" />

        <receiver
            android:name=".CustomAdapters.EstadoPedidoReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="modelo.Pedido.ESTADO_ACEPTADO" />
                <action android:name="modelo.Pedido.ESTADO_CANCELADO" />
                <action android:name="modelo.Pedido.ESTADO_EN_PREPARACION" />
                <action android:name="modelo.Pedido.ESTADO_LISTO" />
            </intent-filter>
        </receiver>

        <service
            android:name=".PrepararPedidoService"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name=".RestoMessagingService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>


        <service
            android:name=".RestoFirebaseInstanceIdService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="CANAL01"/>

    </application>

</manifest>